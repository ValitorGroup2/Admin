@model AdminWeb.DAL.Connections.Company

@using (Html.BeginForm("EditInfo", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.SSN)

        <div class="form-group">
            <label class="control-label col-md-4">Heimilisfang</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Póstnr.</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.ZipCode)
                @Html.ValidationMessageFor(model => model.ZipCode)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Borg</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.City)
                @Html.ValidationMessageFor(model => model.City)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Bankaupplýsingar</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.BankAccount)
                @Html.ValidationMessageFor(model => model.BankAccount)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Tölvupóstur</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Sími</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Phone)
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" value="Breyta" class="btn btn-primary" />
				@Html.ActionLink("Hætta við", "Index", null, new { @class = "btn btn-white"})
            </div>
        </div>
    </div>
}
