@model IEnumerable<AdminWeb.DAL.Connections.Company>

@{
    ViewBag.Title = "Fyrirtækjayfirlit";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-8">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-4">
        <div class="title-action">
            @Html.ActionLink("Tilbaka", "Index", "Home", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Yfirlit yfir fyrirtæki</h5>
					<div class="ibox-tools">
						
					</div>
                </div>
                <div class="ibox-content">

<table class="table table-striped">
    <tr>
        <th>
            Kennitala
        </th>
        <th>
            Nafn
        </th>
        <th>
            Heimilisfang
        </th>
        <th>
            Sími
        </th>
        <th>
            Tölvupóstur
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SSN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address), @Html.DisplayFor(modelItem => item.ZipCode) @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
			@Html.ActionLink("Skoða", "Company", new { id=item.ID }, new { @class = "btn btn-primary btn-sm"})
        </td>
    </tr>
}

</table>

                </div>
            </div>
        </div>
    </div>
 </div>



