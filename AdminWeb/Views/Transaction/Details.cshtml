@model AdminWeb.DAL.Connections.Transaction

@{
    ViewBag.Title = "Færsla";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-10">
        <h2>Færsla númer @Model.ID</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Forsíða", "Index", "Home")
            </li>
            <li>
                @Html.ActionLink("Yfirlit færslna", "Index")
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-2">
        <div class="title-action">
            @Html.ActionLink("Tilbaka", "Index", "Transaction", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Upplýsingar um færslu</h5>
                </div>
                <div class="ibox-content">

				    <dl class="dl-horizontal">
        <dt>
            Starfsmaður
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Staff.Name)
       </dd>

        <dt>
            Dagsetning
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
           Upphæð
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>
       

    </dl>

                </div>
            </div>
        </div>
    </div>
 </div>













