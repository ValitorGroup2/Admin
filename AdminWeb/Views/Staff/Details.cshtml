@model AdminWeb.Models.StaffDetailsViewModel

@{
    ViewBag.Title = "Upplýsingar";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Forsíða", "Index", "Home")
            </li>
            <li>
                @Html.ActionLink("Starfsmannaaðgangar", "Index")
            </li>
            <li class="active">
                <strong>Upplýsingar um @Model.Staff.Name</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-2">
        <div class="title-action">
            @Html.ActionLink("Til baka", "Index", "Staff", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-6">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@ViewBag.Title um @Model.Staff.Name</h5>
                </div>
                <div class="ibox-content">


				    <dl class="dl-horizontal">
                        <dt>
                            Nafn
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Staff.Name)
                        </dd>

                        <dt>
                            Aldur
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Staff.Age)
                        </dd>

                        <dt>
                            Tölvupóstur
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Staff.Email)
                        </dd>

                        <dt>
                            Leyfi til að endurgreiða
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Staff.Refund)
                        </dd>

                        <dt>
                            Lykilorð
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Staff.Password)
                        </dd>

    </dl>


	    @Html.ActionLink("Breyta starfsmanni", "Edit", new { id = Model.Staff.ID }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Eyða starfsmanni", "Delete/" + Model.Staff.ID, null, new { @class = "btn btn-danger" })

                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Færslur @Model.Staff.Name</h5>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped">
                        <tr>
                            <th>
                                Færslunúmer
                            </th>
                            <th>
                                Starfsmaður
                            </th>
                            <th>
                                Dagsetning
                            </th>
                            <th>
                                Upphæð
                            </th>

                            <th></th>
                        </tr>
                        @foreach (var item in Model.Transactions)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Staff.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.ActionLink("Upplýsingar", "Details", new { id = item.ID }, new { @class = "btn btn-primary btn-sm" })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>

    </div>
 </div>













