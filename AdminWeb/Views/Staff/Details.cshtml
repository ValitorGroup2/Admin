@model AdminWeb.DAL.Connections.Staff

@{
    ViewBag.Title = "Upplýsingar";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12">
        <h2>Upplýsingar</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Forsíða", "Index", "Home")
            </li>
            <li>
                @Html.ActionLink("Upplýsingar", "Index")
            </li>
            <li class="active">
                <strong>Upplýsingar um @Model.Name</strong>
            </li>
        </ol>
    </div>
    </div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@ViewBag.Title um @Model.Name</h5>
                </div>
                <div class="ibox-content">


				    <dl class="dl-horizontal">
                        <dt>
                            Nafn
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt>
                            Aldur
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Age)
                        </dd>

                        <dt>
                            Tölvupóstur
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                        <dt>
                            Leyfi til að endurgreiða
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Refund)
                        </dd>

                        <dt>
                            Lykilorð
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Password)
                        </dd>

    </dl>


	    @Html.ActionLink("Breyta starfsmanni", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary"})
    @Html.ActionLink("Til baka í yfirlit", "Index", null, new { @class = "btn btn-white"})

                </div>
            </div>
        </div>
    </div>
 </div>













