@model IEnumerable<AdminWeb.DAL.Connections.Staff>

@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Starfsmannaaðgangar</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Forsíða", "Index", "Home")
            </li>
            <li class="active">
                <strong>Starfsmannaaðgangar</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listi yfir starfsmannaaðganga</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Stofna aðgang", "Create", null, new { @class = "btn btn-primary btn-xs"})
					</div>
                </div>
                <div class="ibox-content">

<table class="table table-striped">
    <tr>
        <th>
            Notandanafn
        </th>
        <th>
            Lykilorð
        </th>
        <th>
            Aldur
        </th>
        <th>
            Tölvupóstur
        </th>
        <th>
            Má endurgreiða
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Refund)
        </td>
        <td>
			@Html.ActionLink("Skoða", "Details", new { id=item.ID }, new { @class = "btn btn-primary btn-sm"})
        </td>
    </tr>
}

</table>

                </div>
            </div>
        </div>
    </div>
 </div>



