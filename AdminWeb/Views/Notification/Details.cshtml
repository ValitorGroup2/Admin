@model AdminWeb.DAL.Connections.Notification

@{
    ViewBag.Title = "Nánar um tilkynningu";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Forsíða", "Index", "Home")
            </li>
            <li>
                @Html.ActionLink("Tilkynningar", "Index")
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-2">
        <div class="title-action">
            @Html.ActionLink("Tilbaka", "Index", "Notification", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@ViewBag.Title</h5>
                </div>
                <div class="ibox-content">


				    <dl class="dl-horizontal">
        <dt>
            Starfsmaður
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Transaction.Staff.Name)
        </dd>
        <dt>
            Dagsetning
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            Tilkynning
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Færslunúmer
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TransactionID)
        </dd>
        <dt>
            Upphæð færslu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Transaction.Amount)
        </dd>

    </dl>
                </div>
            </div>
        </div>
    </div>
 </div>













