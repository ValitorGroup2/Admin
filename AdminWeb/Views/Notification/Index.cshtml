@model IEnumerable<AdminWeb.DAL.Connections.Notification>


@{
    ViewBag.Title = "Tilkynningar";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Forsíða", "Index", "Home")
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-2">
        <div class="title-action">
            @Html.ActionLink("Tilbaka", "Index", "Home", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                <h5>@ViewBag.Title</h5>
            </div>
                <div class="ibox-content">

<table class="table table-striped">
    <tr>
        <th>
            Starfsmaður
        </th>
        <th>
            Færslunúmer
        </th>
        <th>
            Skilaboð
        </th>
        <th>
            Dagsetning
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Transaction.Staff.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransactionID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
			@Html.ActionLink("Upplýsingar", "Details", new { id=item.ID }, new { @class = "btn btn-primary btn-sm"})
        </td>
    </tr>
}

</table>

                </div>
            </div>
        </div>
    </div>
 </div>



